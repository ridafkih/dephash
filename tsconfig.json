{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "es5",
    "module": "commonjs",
    "downlevelIteration": true,
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": "lib",
    "paths": {
      "*": ["./*"]
    },
    "types": ["@types/node"],
    "typeRoots": ["lib/types", "./node_modules/@types"]
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "tests"]
}